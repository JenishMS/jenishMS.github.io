  <a id="menu-about" class="h-menu max-sm:hidden active" href="#about">About</a>
  <a id="menu-skills" class="h-menu max-sm:hidden" href="#skills">Skills</a>
  <a id="menu-experience" class="h-menu max-sm:hidden" href="#experience">Experience</a>
  <a id="menu-education" class="h-menu max-sm:hidden" href="#education">Education</a>
  <a id="menu-projects" class="h-menu max-sm:hidden" href="#projects">Projects</a>
  <a id="menu-contact" class="h-menu max-sm:hidden" href="#contact">Contact</a>
  <div class="sm:hidden">
			<button class="navbar-burger flex items-center text-primary p-3">
				<svg class="block h-4 w-4 fill-current" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
					<title>Jenish MS Mobile menu</title>
					<path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path>
				</svg>
